<!DOCTYPE html>
<html lang="en">
<!-- incluimos el head y ademas le pasamos un parametro a tittlePage para que nos renderise el nombre de la pagina-->
<head>
        <%- include("partials/head",{titlePage:'Tienda'})   %>
        <link rel="stylesheet" href="css/tienda.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <%- include('partials/header')  %>
</header>
        <section>
        <h1>Tienda</h1>
        <div class="div-cart">
            <div>
                <ul id="list"></ul>
                <p class="text-right">Total: <span id="total"></span>&dollar;</p>
            </div>
            <button id="btn-vaciar" class="btn btn-danger">Vaciar</button>
            <button class="btn btn-primary"><a style="color:white;text-decoration: none;" href="/cart" >Ver Carrito</a></button>
            </div>
        <div class="seccion-cuerpo">
            <% products.forEach(product => { %> <div class="A">
                <div class="img"><img src="<%- product.img %>" alt="Imagen del producto">
                </div>
                <div class="detalle-de-producto">
                    <div class="detalle-de-compra">
                        <h5 class="productName"><%- product.productName %></h5>
                        <h6 class="price"><%- '$ ' + product.price %></h6>
                    </div>
                    <br>
                    <div class="Btn">
                        <button productId="<%- product.id %>" class="add-cart" type="submit">Add Cart</button>
                        <button  type="submit"><a detailsProductId="<%- product.id %>" class="see-more"  style="color:black;text-decoration: none;" href="/details-product">See More</a></button>
                    </div>
                </div>

            </div>
            <% }) %>
           
        </div>
        </section>
        <footer>
            <%- include('partials/footer')  %>
        </footer>
</body>
</html>